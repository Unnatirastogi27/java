//prg for first occurrence of a number in array, returns its index
public class Firstoccurence{
    
    public static int firstoccur(int arr[],int i,int key)
    {
        if(i==arr.length)// base case
         return -1;
        if(arr[i]==key)
         return i;
        return firstoccur(arr, i+1 , key);// intrenal function call
    }
    public static void main(String[] args) {
        int arr[] = {1,2,3,4,5,1,2};
        System.out.println(firstoccur(arr, 0, 2));
    }
}
